<div id="list_items_in_cart">
<% if cart.cart_reservations.size == 0 %>
  (empty)
</div>
<% else %>
<table id="table_list_items" class="table table-bordered table-striped table-condensed">
    <tbody>
  <% cart.models_with_quantities.each_pair do |model_id, quantity| %>
    <tr>
      <td colspan="2"><%= quantity %> x <%= link_to EquipmentModel.find(model_id).name, EquipmentModel.find(model_id) %></td>
      <tr>
      <td rowspan="2"><%= link_to "Remove", {:url => remove_from_cart_path(EquipmentModel.find(model_id))},
                                :href => remove_from_cart_path(EquipmentModel.find(model_id)),
                                :method => :put, :remote => true, :class => 'btn btn-mini' %></td>
                                </tr>
    </tr>
    </tbody>
  <% end %>
  </table>
</div>
<% end %>
