<% # flash messages, if any %> 
      <% flash.each do |name, msg| %>
        <% unless msg.blank? %>
          <%= content_tag :div, :id => "flash_#{name}", :class => "alert alert-#{name == :notice ? "success" : "error"}" do %>
              <button class="close" data-dismiss="alert">Ã—</button>        
            <%= msg %>
          <% end %>
        <% end %>
      <% end %>
