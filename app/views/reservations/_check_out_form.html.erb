<div id="<%= @reservation.id %>" class="well-nomargin span4 checkout">
  <header>
    <h3><%= link_to "Reservation ##{@reservation.id}", @reservation %></h3>
  </header>
  <hr>
	<h4><%= @reservation.equipment_model.name %></h4>

	<%= select_tag "reservations[#{@reservation.id}][equipment_object_id]", @reservation.equipment_model.available_object_select_options, :prompt => 'Please select..', :class => 'dropdown dropselect' %>
	
	<p>
    <p><h4>Notes</h4></p>
		<%= text_area_tag "reservations[#{@reservation.id}][notes]", @reservation.notes %>
		<%= render :partial => 'shared/markdown_button' %>
	</p>
	
	<p>
  	<h4>Check-Out Procedures</h4>
  	<ul>
    	<% if @reservation.equipment_model.checkout_procedures.empty? %>
          <li><em>(none)</em></li>
    	<% else %>
        <ol>
          <% @reservation.equipment_model.checkout_procedures.each do |checkout_procedure| %>
            <li>
              <%# index with the checkout_procedure.id %>
              <%= check_box_tag "reservations[#{@reservation.id}][checkout_procedures][#{checkout_procedure.id}]" %> <%= checkout_procedure.step %>
            </li>
          <% end %>
        </ol>
    	<% end %>
  	</ul>
	</p>

  <hr>
  <footer>
    <p>
        This equipment is <strong>due back on <%= @reservation.due_date.to_date.to_s(:long) %>.</strong><br />
        An overdue return will incur a combined late fee of <strong><%= number_to_currency(@reservation.late_fee) %> / day.</strong>
    </p>
  </footer>

</div>
