<%= simple_form_for @requirement, html: {class: 'form-horizontal'} do |f| %>
  <%= f.error_notification %>

  <%= f.input :description %>
  <%# TODO: Make this a fancy box %>
  <%= f.association :equipment_models, input_html: {class: 'input-xlarge'} %>
  <%= f.input :contact_name %>
  <%= f.input :contact_info %>
  <%= f.input :notes %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, cancel: requirements_path %>
    </div>
  </div>
<% end %>
