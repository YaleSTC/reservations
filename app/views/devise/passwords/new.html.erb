<% title 'Forgot your password?' %>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :email, required: true, autofocus: true %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, 'Send me reset password instructions', class: 'btn-primary' %>
      <%= link_to 'Sign in', new_session_path(resource_name), class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
