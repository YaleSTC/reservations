// loads the simple form validations by reloading the page
<% if params[:action] == "create" %>
  <% if params[:from_cart] == "true" %>
    $('#new_user').replaceWith('<%= escape_javascript(render :partial => "short_form") %>');
  <% else %>
    $('#new_user').replaceWith('<%= escape_javascript(render :partial => "form") %>');
  <% end %>
<% elsif params[:action] == "update" %>
  $('#edit_form').replaceWith('<%= escape_javascript(render :partial => "form") %>');
<% else %>
  $(window.location.reload()); // to have a backup behavior
<% end %>
