<% title "Users" %>

<%= render :partial => 'table', :locals => {:users => @users} %>

<hr />
<p>
  <%= link_to "New User", new_user_path, :class => "btn btn-primary" %>
  <% if can? :manage, User %>
    <%= link_to "Import Users", csv_import_page_path, :class => "btn btn-default" %>
  <% end %>
  <% if params[:show_banned] %>
    <%= link_to "Hide Banned Users from List", users_path, :class => "btn btn-default" %>
  <% else %>
    <%= link_to "Show Banned Users in List", users_path(:show_banned => true), :class => "btn btn-default" %>
  <% end %>
</p>
