<%# flash messages, if any %>
  <% flash.each do |name, msg| %>
    <% unless msg.blank? %>
      <%= content_tag :div, :id => "flash_#{name}", :class => "alert alert-#{(name == :notice || 'notice') ? "success" : "error"}" do %>
          <button class="close" data-dismiss="alert">Ã—</button>
        <%= msg.gsub(/\n/, "<br />").html_safe %>
      <% end %>
    <% end %>
  <% end %>
  <% flash.clear %>
