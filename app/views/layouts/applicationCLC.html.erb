      st_go({blog:'3222115',v:'ext',post:'2'});
      var load_cmc = function(){linktracker_init(3222115,2,2);};
      if ( typeof addLoadEvent != 'undefined' ) addLoadEvent(load_cmc);
      else load_cmc();
    </script>

  </body>
</html>
